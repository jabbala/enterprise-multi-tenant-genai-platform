# Example environment configuration
# Copy to .env and update with your values

# Application
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# Security
JWT_SECRET=your-production-jwt-secret-change-me
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# LLM Provider
LLM_PROVIDER_URL=http://localhost:8001
LLM_API_KEY=your-llm-api-key
LLM_MODEL=gpt-4-turbo
LLM_TIMEOUT=30

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_TTL_SECONDS=3600
REDIS_MAX_CONNECTIONS=50

# OpenSearch Configuration
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin_password
OPENSEARCH_INDEX_PREFIX=genai
OPENSEARCH_NUMBER_OF_SHARDS=3
OPENSEARCH_NUMBER_OF_REPLICAS=1

# FAISS Vector Store
FAISS_INDEX_PATH=./data/faiss_indexes
FAISS_DIMENSION=1536

# Retrieval Settings
RETRIEVAL_TOP_K=5
RETRIEVAL_MIN_SCORE=0.3
BM25_WEIGHT=0.4
VECTOR_WEIGHT=0.6

# Cost Tracking
COST_TRACKING_ENABLED=true
LLM_COST_PER_1K_TOKENS=0.03
RETRIEVAL_COST_PER_QUERY=0.001

# Observability
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
OPENTELEMETRY_ENABLED=true
JAEGER_HOST=localhost
JAEGER_PORT=6831

# Logging
LOG_FORMAT=json
STRUCTURED_LOGGING_ENABLED=true

# Resilience
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60
MAX_RETRIES=3
INITIAL_RETRY_DELAY=0.5
MAX_RETRY_DELAY=10.0

# Load Testing & Scaling
TARGET_LATENCY_P95_MS=2500
TARGET_UPTIME_PERCENTAGE=99.9
TARGET_PRECISION_AT_5=0.9

# Audit & Compliance
AUDIT_LOGGING_ENABLED=true
PII_REDACTION_ENABLED=true
CROSS_TENANT_LEAKAGE_CHECK_ENABLED=true

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=genai_platform
DB_USER=postgres
DB_PASSWORD=postgres
